{
	"compilerOptions": {
		"target": "ESNext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noUncheckedIndexedAccess": true,
		"types": ["node"],
		"jsx": "react-jsx"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
