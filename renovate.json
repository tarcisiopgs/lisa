{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "schedule": [
    "every day before 9am"
  ],
  "timezone": "America/Sao_Paulo",
  "labels": [
    "dependencies"
  ],
  "automerge": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "minor dependencies",
      "matchUpdateTypes": [
        "minor"
      ]
    },
    {
      "groupName": "major dependencies",
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
