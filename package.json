{
	"name": "@tarcisiopgs/lisa",
	"version": "1.6.0",
	"description": "Deterministic autonomous issue resolver â€” structured AI agent loop for Linear/Trello",
	"license": "MIT",
	"type": "module",
	"bin": {
		"lisa": "dist/index.js"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsx src/index.ts",
		"check": "biome check src/",
		"format": "biome format --write src/",
		"lint": "biome lint src/",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"ci": "concurrently -n lint,typecheck,test \"pnpm lint\" \"pnpm typecheck\" \"pnpm test\"",
		"prepare": "husky"
	},
	"dependencies": {
		"@clack/prompts": "^1.0.1",
		"citty": "^0.2.1",
		"execa": "^9.6.1",
		"picocolors": "^1.1.1",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.3",
		"@types/node": "^22.13.4",
		"@vitest/coverage-v8": "^4.0.18",
		"concurrently": "^9.2.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.29.3",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tarcisiopgs/lisa.git"
	},
	"files": [
		"dist"
	],
	"lint-staged": {
		"*.{ts,tsx}": [
			"biome check --write"
		]
	}
}
