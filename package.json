{
	"name": "@tarcisiopgs/lisa",
	"version": "1.13.0",
	"description": "Autonomous issue resolver",
	"keywords": [
		"loop",
		"ai-agent",
		"autonomous",
		"issue-resolver",
		"cli",
		"github",
		"linear",
		"coding-agent",
		"autonomous-coding",
		"ai-devops",
		"issue-to-pr",
		"coding-agent-loop",
		"developer-automation",
		"autonomous-pr",
		"jira",
		"github-issues",
		"claude-code"
	],
	"license": "MIT",
	"type": "module",
	"bin": {
		"lisa": "dist/index.js"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsx src/index.ts",
		"check": "biome check src/",
		"format": "biome format --write src/",
		"lint": "biome lint src/",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"ci": "concurrently -n lint,typecheck,test \"pnpm lint\" \"pnpm typecheck\" \"pnpm test\"",
		"prepare": "husky"
	},
	"dependencies": {
		"@clack/prompts": "^1.0.1",
		"citty": "^0.2.1",
		"execa": "^9.6.1",
		"ink": "^6.8.0",
		"ink-spinner": "^5.0.0",
		"picocolors": "^1.1.1",
		"react": "^19.2.4",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@types/node": "^25.3.1",
		"@types/react": "^19.2.14",
		"@vitest/coverage-v8": "^4.0.18",
		"concurrently": "^9.2.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18",
		"ink-testing-library": "^3.0.0"
	},
	"packageManager": "pnpm@10.30.3",
	"engines": {
		"node": ">=20"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tarcisiopgs/lisa.git"
	},
	"files": [
		"dist",
		"README.md"
	],
	"lint-staged": {
		"*.{ts,tsx}": [
			"biome check --write"
		]
	},
	"pnpm": {
		"onlyBuiltDependencies": ["esbuild"]
	}
}
